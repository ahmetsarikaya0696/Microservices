@model List<OrderVM>
@{
    ViewData["Title"] = "CheckoutHistory";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Ödeme Geçmişi</h5>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Sipariş No</th>
                            <th>Satın Alma Tarihi</th>
                            <th>Detaylar</th>
                        </tr>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.CreatedDate.ToShortDateString()</td>
                                <td>
                                    <table class="table table-striped table-bordered">
                                        <tr>
                                            <th>Kurs İsmi</th>
                                            <th>Kurs Fiyat</th>
                                        </tr>
                                        @foreach (var orderItem in order.OrderItems)
                                        {
                                            <tr>
                                                <td>@orderItem.ProductName</td>
                                                <td>@orderItem.Price</td>
                                            </tr>
                                        }
                                    </table>
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Satın aldığınız bir kurs bulunmamaktadır!
                    </div>
                }
            </div>
        </div>
    </div>
</div>

