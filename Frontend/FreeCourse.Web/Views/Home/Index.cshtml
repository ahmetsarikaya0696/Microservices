﻿@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}
@model List<CourseVM>
<h2>Kurslar</h2>
<hr />

@if (Model.Any())
{
    @foreach (var course in Model)
    {
        count++;
        if (count == 1 || (count % 3 == 1))
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-2' >")
        }
        <div class="col">
            <div class="card">
                <img style="height:150px;" src="@course.PictureUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@course.Name</h5>
                    <div class="badge bg-primary">Kategori : @course.Category.Name</div>
                    <p class="card-text">@course.ShortDescription</p>
                    <h4 class="text-primary">@course.Price TL</h4>

                    <div>
                        <a asp-controller="Home" asp-action="Detail" class="btn btn-success" asp-route-id="@course.Id">Detay</a>
                    </div>
                </div>
            </div>
        </div>

        if (count % 3 == 0)
        {
            @Html.Raw("</div>")
        }

    }

}
else
{
    <div class="alert alert-info">Kurs bulunamadı!</div>
}